<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#B5CB99">

    <ImageView
        android:id="@+id/krasrakas"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/kasrakas"
        tools:ignore="MissingConstraints"
        android:importantForAccessibility="no">
    </ImageView>


    <RelativeLayout
        android:id="@+id/myFraming"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/krasrakas"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_background"
        android:layout_centerInParent="true"
        android:paddingBottom="12dp"
        >

        <EditText
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:autofillHints="Nama Lengkap"
            android:hint="@string/nama"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:backgroundTint="#FFFFFF"/>

        <EditText
            android:id="@+id/phone"
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:autofillHints="nomor telepon"
            android:hint="@string/nomor_telepon"
            android:inputType="phone"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:backgroundTint="#FFFFFF"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:autofillHints="email"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:backgroundTint="#FFFFFF"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:autofillHints="Kata sandi"
            android:hint="@string/kata_sandi"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:backgroundTint="#FFFFFF"/>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/daftar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/myFraming"
        android:layout_centerHorizontal="true"
        android:src="@drawable/daftar"
        android:contentDescription="Image Button"
        android:layout_marginTop="12dp"
        android:background="@null"
        android:layout_centerInParent="true"
        tools:ignore="NotSibling" />


</RelativeLayout>